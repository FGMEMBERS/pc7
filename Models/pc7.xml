<PropertyList>

 <path>pc7.ac</path>
 <offsets>
  <pitch-deg>-4</pitch-deg>
 </offsets>

 <nasal>
  <load>
   var livery_update = aircraft.livery_update.new("Aircraft/pc7/Models/Liveries");
  </load>
  <unload>
   livery_update.stop();
